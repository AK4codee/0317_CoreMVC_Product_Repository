@using _0317_Product_Repository.Models.ViewModel.View
@model ProductIndexViewModel

<h2>@Model.Title</h2>
<p>@Model.Description</p>

<ul>
    @foreach(var item in Model.productlist){
        <li>
            <div>
                <h5>@item.Name</h5>
                <p>@item.Price</p>
                <p>@item.Count</p>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">編輯</a> |
                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-success">明細</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">刪除</a>
            </div>
        </li>
    }
</ul>
